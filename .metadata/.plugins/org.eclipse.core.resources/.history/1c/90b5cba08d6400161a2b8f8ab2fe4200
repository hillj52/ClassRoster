package diceGame;

public class CrapsRoll {

	private Dice d;
	private int roll1;
	private int roll2;
	
	public CrapsRoll() {
		d = new Dice();
		roll();
	}
	
	public void roll() {
		roll1 = d.roll();
		roll2 = d.roll();
	}
	
	public int getRoll1() {
		return roll1;
	}
	
	public int getRoll2() {
		return roll2;
	}
	
	public int getTotal() {
		return roll1 + roll2;
	}
	
	public String toString() {
		return d.graphicDice(roll1) + d.graphicDice(roll2);
	}
}
